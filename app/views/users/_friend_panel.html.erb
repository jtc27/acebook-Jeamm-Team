<div class="container">
<div class="p-2 ">
    <h5> </h5>
  </div>
  <div class="p-2 ">
    <h5>Friend Suggestions:</h5>
  </div>
</div>

<div class="container">
  <div class="row g-3">

    <% @users.each do |user| %>
    <% if user != @user %>
      <div class="col-12" > 
      <div class="p-3 border"> 
      <div class="mt-3 text-center">
         <%= image_tag(user.photo.url, :style =>  'width: 90px; height: 90px;', :class => "rounded-circle") if user.photo?%> 
            <h5><%=user.first_name %> <%= user.last_name %></h5> 
            <button class="btn btn-primary btn-sm follow">Send request</button>
            <div class="d-flex justify-content-center align-items-center mt-4 px-4">
            <div class="stats">
              <h6 class="mb-0">Mutual friends</h6> <span>0</span>
            </div>
            </div>
      </div>
      </div>
      </div>
    <% end %>
    <% end %>

  </div>
</div>